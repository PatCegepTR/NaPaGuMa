<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvZoomArticleTitre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A92121"
                android:padding="25sp"
                android:text="@string/titre_card_article1"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivZoomArticleImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FDF6F6"
                android:padding="25sp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvZoomArticleDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDF6F6"
                android:justificationMode="inter_word"
                android:paddingLeft="25sp"
                android:paddingRight="25sp"
                android:text="Le pouls représente quelque chose de bien utile dans la vie. Par example, le pouls permet de savoir si une personne est en vie ou non. De plus, selon le docteur Patrice Anctil, il est primordiale d'avoir un poul entre 70 et 120. Trop bas ou trop haut peut endommager le corps humain de façon très négative. Pour plus d'informations sur le poul, cliquez sur le lien plus bas."
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvZoomArticleLien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:background="#FDF6F6"
                android:padding="25sp"
                android:text="www.articlesurlepoul.com" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>