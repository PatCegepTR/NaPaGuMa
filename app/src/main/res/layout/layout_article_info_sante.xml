<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvZoomArticleTitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25sp"
            android:text="@string/titre_card_article1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivZoomArticleImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvZoomArticleDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="Le pouls représente quelque chose de bien utile dans la vie. Par example, le pouls permet de savoir si une personne est en vie ou non. De plus, selon le docteur Patrice Anctil, il est primordiale d'avoir un poul entre 70 et 120. Trop bas ou trop haut peut endommager le corps humain de façon très négative. Pour plus d'informations sur le poul, cliquez sur le lien plus bas." />

        <TextView
            android:id="@+id/tvZoomArticleLien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="www.articlesurlepoul.com" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>