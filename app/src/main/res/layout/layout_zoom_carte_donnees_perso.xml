<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FDF6F6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvZoomJourneeHeure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A92121"
                android:padding="5sp"
                android:text="8:15 am"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivZoomJourneeRC"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="5sp"
                    android:paddingTop="5sp"
                    app:srcCompat="@drawable/ic_frequence_cardiaque" />

                <TextView
                    android:id="@+id/tvZoomJourneeRC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:paddingTop="5sp"
                    android:text="000"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivZoomJourneeSO"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="5sp"
                    android:paddingTop="5sp"
                    app:srcCompat="@drawable/ic_saturation_oxygen" />

                <TextView
                    android:id="@+id/tvZoomJourneeSO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:paddingTop="5sp"
                    android:text="000"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>